<sap:ActivityDesigner x:Class="UiPathTeam.Activities.Design.WhileLoopActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:sa="clr-namespace:System.Activities;assembly=System.Activities"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation">
    
    <StackPanel>
        <WrapPanel>
            <Label>Condition:</Label>
            <sapv:ExpressionTextBox
            Expression="{Binding Path=ModelItem.Condition}"
            ExpressionType="s:Boolean"
            OwnerActivity="{Binding Path=ModelItem}"
            HintText="Condition (VB)"
            Width="200"
            />
        </WrapPanel>
        <Label>Body:</Label>
        <sap:WorkflowItemPresenter
            AutomationProperties.AutomationId="Activity"
            IsDefaultContainer="true"
            Item="{Binding Path=ModelItem.Body.Handler, Mode=TwoWay}"
            HintText="Body (Activity)" MinWidth="100" MinHeight="50"
            AllowedItemType="{x:Type sa:Activity}" />
    </StackPanel>

</sap:ActivityDesigner>
